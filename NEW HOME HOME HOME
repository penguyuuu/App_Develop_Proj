  <script>
      function initMap() {
          var shopLocation = { lat: 1.3722, lng: 103.8931 }; // Coordinates for Hougang Ave 4, Singapore
          var map = new google.maps.Map(document.getElementById("map"), {
              zoom: 15,
              center: shopLocation
          });
          var marker = new google.maps.Marker({
              position: shopLocation,
              map: map,
              title: "Find Us Here!"
          });
      }
  </script>
  
